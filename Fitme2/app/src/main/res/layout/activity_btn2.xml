<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg12"
    android:orientation="vertical"
    tools:context=".btn1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="73dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titlepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="8dp"
                android:text="MODERATE"
                android:textStyle="bold"
                android:textColor="#0d6e6a"
                android:textSize="40sp"/>

            <TextView
                android:id="@+id/subtitlepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="Exercises for Cardiovascular Endurance"
                android:textColor="#0d6e6a"
                android:textSize="20sp"/>

            <View
                android:id="@+id/divpage"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="26dp"
                android:background="#25293E"/>

            <TextView
                android:id="@+id/intropage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="8dp"
                android:text="STEPS:"
                android:textColor="#0d6e6a"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="5dp"
                android:text="1.	Preacher curl - 5 set, 10-15 reps"
                android:textColor="#000"
                android:textSize="20sp"
                app:fontFamily="sans-serif"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/one"
                android:layout_width="260dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/concentration_curl"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="40dp"
                android:text="2.	Standing extensions - 2-6 set, 10 reps"
                android:textColor="#000"
                android:textSize="20sp"
                app:fontFamily="sans-serif"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/two"
                android:layout_width="260dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/standing_cross"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="40dp"
                android:text="3.	Seated triceps press - 2-6 set, 10 reps"
                android:textColor="#000"
                android:textSize="20sp"
                app:fontFamily="sans-serif"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/three"
                android:layout_width="260dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/tricep_dips"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="5dp"
                android:text="4.	Arm muscle toner - 3 set, 10 reps"
                android:textColor="#000"
                android:textSize="20sp"
                app:fontFamily="sans-serif"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/four"
                android:layout_width="260dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/speed_bag"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="40dp"
                android:lineSpacingExtra="5dp"
                android:text="5.	Carry all curl - 3 set, 12-15 reps"
                android:textColor="#000"
                android:textSize="20sp"
                app:fontFamily="sans-serif"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/five"
                android:layout_width="260dp"
                android:layout_height="190dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/back_extensions"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btntry"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/button2"
                android:onClick="enter"
                android:padding="9dp"
                android:text="TRY"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="19sp"
                app:backgroundTint="#0d6e6a" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>